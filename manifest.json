{
    "name": "1click bib",
    "version": "1.0",
    "description": "Copy BibTex from GScholar result page with 1 click!",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://scholar.google.com/*",
                "https://scholar.googleusercontent.com/scholar.bib?*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/bib18.png",
            "32": "images/bib36.png",
            "48": "images/bib72.png",
            "128": "images/bib150.png"
        }
    },
    "icons": {
        "16": "images/bib18.png",
        "32": "images/bib36.png",
        "48": "images/bib72.png",
        "128": "images/bib150.png"
    },
    "manifest_version": 2
}